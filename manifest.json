{
  "manifest_version": 3,
  "name": "Simple Chrome Extension",
  "version": "1.0",
  "permissions": ["storage", "activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "host_permissions": ["<all_urls>"],
  "description": "Simple Chrome Extension",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
